<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Receipe</th>
      <th>Number</th>
      <th>Comment</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.receipe_id %></td>
        <td><%= step.number %></td>
        <td><%= step.comment %></td>
        <td><%= step.image %></td>
        <td><%= link_to 'Show', step %></td>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

